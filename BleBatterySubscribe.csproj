    <UserSecretsId>dotnet-BleBatterySubscribe-A45D7BE6-5AB0-43AB-99F0-6563BD4C1987</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
